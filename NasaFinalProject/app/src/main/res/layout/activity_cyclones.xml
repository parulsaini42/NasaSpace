<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cyclones"
    android:background="#141111">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="348dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="394dp"
                android:layout_height="471dp"
                android:src="@drawable/cyclone" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:text="Cyclone"
            android:textColor="#c8f1edeb"
            android:textSize="32dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="12dp"
            android:layout_height="162dp"
            android:gravity="center_horizontal"
            android:textColor="#c8b45527"
            android:text="In meteorology, a cyclone is a large scale air mass that rotates around a strong center of low atmospheric pressure.[1][2] Cyclones are characterized by inward spiraling winds that rotate about a zone of low pressure. The largest low-pressure systems are polar vortices and extratropical cyclones of the largest scale (the synoptic scale). Warm-core cyclones such as tropical cyclones and subtropical cyclones also lie within the synoptic scale."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="DO's"
            android:textColor="#c8eee7e4"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c8b45527"
            android:text="When a cyclone alert is on for your area continue normal working but stay alert to the radio warnings.
When your area is under cyclone warning, Leave early before your way to high ground or shelter gets flooded.
Ensure that your hurricane lantern,torches or other emergency lights are in working condition and keep them handy
"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="DON'Ts"
            android:textColor="#c8f6f6f6"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="When your area is under cyclone warning, do not delay and run the risk of being marooned.
When Evacuation is instructed, do not worry about your property.
When the Cyclone starts, do not believe in unofficial information.
"
            android:textColor="#c8b45527" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" >


            <VideoView
                android:id="@+id/videoview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                />
        </RelativeLayout>

    </LinearLayout>



    </ScrollView>